<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="570dp"
    android:layout_height="match_parent"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_week_large"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingTop="15dp"
                    android:textSize="15sp">
                </TextView>

                <TextView
                    android:id="@+id/detail_date_large"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_max_large"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:textSize="60sp">
                </TextView>

                <TextView
                    android:id="@+id/detail_min_large"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:textSize="35sp">
                </TextView>

                <TextView
                    android:id="@+id/detail_humidity_large"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>

                <TextView
                    android:id="@+id/detail_pressure_large"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>

                <TextView
                    android:id="@+id/detail_wind_large"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detail_image_large"
                    android:layout_width="230dp"
                    android:layout_height="230dp">
                </ImageView>

                <TextView
                    android:id="@+id/detail_weather_large"
                    android:layout_width="230dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:textSize="20sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

